    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.android.gpasystem.activities.MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

       <include android:id="@+id/displaycgpa"
           layout="@layout/card_for_cgpa"/>

        <include android:id="@+id/firstcard"
            layout="@layout/horizontal_cards_for_sgpa"/>
        <include android:id="@+id/secondcard"
            layout="@layout/horizontal_cards_for_sgpa"/>
        <include android:id="@+id/thirdcard"
            layout="@layout/horizontal_cards_for_sgpa"/>
        <include android:id="@+id/fourthcard"
            layout="@layout/horizontal_cards_for_sgpa"/>

    </LinearLayout>
    </ScrollView>
</layout>
